{
  "function": {
    "api/image-proxy": {
      "runtime": "edge"
    }
  },
  "headers": [
    {
      "source": "/project/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=31535940"
        }
      ]
    },
    {
      "source": "/fonts/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/img/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/svg/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
